extends ../base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(type="password" placeholder="Old Password" required name="oldPassword")
        input(type="password" placeholder="New Password" required name="newPassword")
        input(type="password" placeholder="New Password Confirm" required name="newpasswordconfirm")
        input(type="submit" value="Update Password")